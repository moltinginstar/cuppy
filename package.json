    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js,css,md}": "prettier --write"
  },
  "devDependencies": {
    "camelcase": "^8.0.0",
    "husky": "^9.0.6",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-checker": "^0.6.2",
    "vite-plugin-dts": "^3.7.2"
  },
  "repository": "https://github.com/moltinginstar/cuppy.git",
  "homepage": "https://github.com/moltinginstar/cuppy",
  "bugs": "https://github.com/moltinginstar/cuppy/issues",
  "keywords": [
    "currency",
    "conversion",
    "inflation",
    "display",
    "dollars",
    "component",
    "typescript",
    "component",
    "lightweight",
    "fast",
    "intl",
    "i18n",
    "internationalization",
    "NumberFormat",
    "CPI",
    "CPI-U"
